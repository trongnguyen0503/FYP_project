<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diaglog_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dl_music"
        android:textSize="40dp"
        android:fontFamily="@font/font_main"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/dl_btn_music"
        app:layout_constraintBottom_toBottomOf="@id/dl_btn_music"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dl_sound"
        android:textSize="40dp"
        android:fontFamily="@font/font_main"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/dl_btn_sound"
        app:layout_constraintBottom_toBottomOf="@id/dl_btn_sound"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/dl_btn_music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnstyle"
        android:padding="8dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/dl_btn_sound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnstyle"
        android:padding="8dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dl_btn_music"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>