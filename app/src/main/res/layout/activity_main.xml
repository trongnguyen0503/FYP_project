<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#FFF"/>
    <Button
        android:id="@+id/btn_main_play"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Play"
        android:textStyle="bold"
        android:fontFamily="@font/font_main"
        android:textSize="25dp"
        android:padding="0dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        />
    <Button
        android:id="@+id/btn_main_challenge"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_main_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Challenge"
        android:textStyle="bold"
        android:fontFamily="@font/font_main"
        android:textColor="#FFFFFF"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <ImageView
        android:id="@+id/btn_main_setting"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@drawable/btnstyle"
        android:padding="5dp"
        android:src="@drawable/btn_setting"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_main_challenge"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_challenge" />

    <ImageView
        android:id="@+id/btn_main_about"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnstyle"
        android:padding="5dp"
        android:src="@drawable/btn_about"
        app:layout_constraintEnd_toStartOf="@id/btn_main_setting"
        app:layout_constraintStart_toEndOf="@+id/btn_main_store"
        app:layout_constraintTop_toBottomOf="@id/btn_main_challenge" />
    <ImageView
        android:id="@+id/btn_main_store"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@drawable/btnstyle"
        android:padding="5dp"
        android:src="@drawable/btn_store"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_main_challenge"
        app:layout_constraintStart_toStartOf="@id/btn_main_challenge"/>

</androidx.constraintlayout.widget.ConstraintLayout>