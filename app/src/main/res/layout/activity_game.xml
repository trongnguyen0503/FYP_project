<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_layout_view"
    android:background="#FFFFFF"
    tools:context=".gameplay.GameActivity">
    <ImageView
        android:id="@+id/gv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/chair"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/pig"
        app:layout_constraintStart_toStartOf="@+id/pig"
        app:layout_constraintTop_toTopOf="@id/pig"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/pig"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_box"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clipToPadding="false"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:spi_dotColor="#FFFFFF"
        app:spi_dotSize="10dp"
        app:spi_dotSelectedColor="#651FFF"
        app:spi_dotSelectedSize="15dp"
        app:spi_dotSpacing="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/rv_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/btn_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_pause"
        android:visibility="gone"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btn_replay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_reply"
        android:visibility="gone"
        android:translationZ="10dp"
        app:layout_constraintEnd_toStartOf="@id/btn_pause"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btn_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_help"
        android:visibility="gone"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btn_store"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_store"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btn_redeem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_redeem"
        android:translationZ="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/btn_store"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_star"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_count_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/img_star"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintBottom_toBottomOf="@id/img_star"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="123"/>
    <View
        android:id="@+id/view_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:translationZ="10dp"
        android:background="#000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>