<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diaglog_bg">

    <ImageView
        android:id="@+id/dl_btn_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btncirclestyle"
        android:padding="5dp"
        android:src="@drawable/btn_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dl_btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnstyle"
        android:padding="5dp"
        android:src="@drawable/btn_home"
        app:layout_constraintBottom_toBottomOf="@+id/dl_btn_play"
        app:layout_constraintEnd_toStartOf="@+id/dl_btn_play"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dl_btn_list_map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnstyle"
        android:padding="5dp"
        android:src="@drawable/btn_list_map"
        app:layout_constraintBottom_toBottomOf="@+id/dl_btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dl_btn_play" />

</androidx.constraintlayout.widget.ConstraintLayout>