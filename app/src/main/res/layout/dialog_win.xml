<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="290dp"
    android:background="@drawable/diaglog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/dl_star_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/dl_star_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/dl_star_2"
        app:layout_constraintEnd_toStartOf="@id/dl_star_2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>
    <ImageView
        android:id="@+id/dl_star_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/dl_star_2"
        app:layout_constraintStart_toEndOf="@id/dl_star_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/dl_btn_replay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnstyle"
        android:src="@drawable/btn_reply"
        app:layout_constraintEnd_toEndOf="@+id/dl_star_3"
        app:layout_constraintTop_toBottomOf="@+id/dl_star_3" />
    <ImageView
        android:id="@+id/dl_btn_list_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnstyle"
        android:src="@drawable/btn_list_map"
        app:layout_constraintEnd_toStartOf="@+id/dl_btn_replay"
        app:layout_constraintStart_toEndOf="@id/dl_btn_home"
        app:layout_constraintTop_toBottomOf="@+id/dl_star_3" />
    <ImageView
        android:id="@+id/dl_btn_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnstyle"
        android:src="@drawable/btn_home"
        app:layout_constraintStart_toStartOf="@id/dl_star_1"
        app:layout_constraintTop_toBottomOf="@+id/dl_star_3" />
    <ImageView
        android:id="@+id/dl_btn_next"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dl_btn_replay"
        app:layout_constraintStart_toStartOf="@id/dl_btn_home"
        app:layout_constraintEnd_toEndOf="@id/dl_btn_replay"
        android:background="@drawable/btnstylenext"
        android:src="@drawable/btn_next"/>
</androidx.constraintlayout.widget.ConstraintLayout>